@using System.Linq.Expressions
@inject IWarehousesClient WarehousesClient

<MudAutocomplete T="WarehouseDto" Label="@Label" Dense="true" Variant="Variant" Style="@Style" Class="@Class" Value="Value" ValueChanged="ValueChanged"
    For="For" SearchFunc="SearchWarehouses" ToStringFunc="(x) => x.Name"
    ResetValueOnEmptyText="true" CoerceText="false" CoerceValue="false">
    <ItemTemplate Context="context2">
        <MudText Typo="Typo.body1">@context2.Name</MudText>
        <MudText Typo="Typo.body2">@context2.Site.Name</MudText>
    </ItemTemplate>

    <ItemSelectedTemplate Context="context2">
        <MudText Typo="Typo.body1">@context2.Name</MudText>
        <MudText Typo="Typo.body2">@context2.Site.Name</MudText>
    </ItemSelectedTemplate>
</MudAutocomplete>

@code {
    [Parameter]
    public string Label { get; set; } = "Warehouse";

    [Parameter]
    public WarehouseDto Value { get; set; }

    [Parameter]
    public EventCallback<WarehouseDto> ValueChanged { get; set; }

    [Parameter]
    public Expression<Func<WarehouseDto>> For { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public Variant Variant { get; set; }

    [Parameter]
    public string? SiteId { get; set; }

    async Task<IEnumerable<WarehouseDto>> SearchWarehouses(string text)
    {
        try
        {
            var results = await WarehousesClient.GetWarehousesAsync(1, 10, SiteId, text, null, null);
            return results.Items;
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }

        return null;
    }
}