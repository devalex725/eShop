@code
{
    int pageSize = 9;
    int pages = 0;
    int page = 1;
    MudChip chip;
    IEnumerable<ProductGroupDto>? itemGroups = null;
    IEnumerable<ProductDto>? items = null;

    [Parameter]
    [SupplyParameterFromQuery]
    public long? GroupId { get; set; }

    IEnumerable<ProductGroupTreeNodeDto> tree;

    protected override async Task OnInitializedAsync()
    {
        tree = await ProductGroupsClient.GetProductGroupsTreeAsync(null);
        itemGroups = await ProductGroupsClient.GetProductGroupsAsync(null, null, true, true);

        await OnPageChanged(1);
    }

    async Task OnPageChanged(int page)
    {

        ProductGroupDto? group = GroupId is null ? null : await ProductGroupsClient.GetProductGroupAsync(GroupId?.ToString());
        var result = await ProductsClient.GetProductsAsync(null, false, true, group?.Path?.ToString(), page - 1, pageSize, null, null, null);
        items = result.Items;
        
        this.pages = (int)Math.Ceiling((double)result.TotalItems / (double)pageSize);
        this.page = page;
    }

    async Task CreateProduct()
    {
        var modalRef = DialogService.Show<CreateProductModal>("New Product");

        var result = await modalRef.Result;

        if (result.Cancelled) return;

        var item = (ProductDto)result.Data;

        NavigationManager.NavigateTo($"/products/{item.Id}/edit");
    }

    async Task SetGroup(MudChip chip)
    {
        var group = itemGroups.FirstOrDefault(g => g.Name == chip.Text);
        GroupId = group?.Id;

        await OnPageChanged(1);

        this.chip = chip;

        NavigationManager.NavigateTo($"/products?groupId={GroupId}", replace: true);
    }

    async Task SetGroup(ProductGroupTreeNodeDto? productGroupTreeNode)
    {
        if(productGroupTreeNode is null) return;

        GroupId = productGroupTreeNode.Id;

        await OnPageChanged(1);

        NavigationManager.NavigateTo($"/products?groupId={GroupId}", replace: true);
    }
}

