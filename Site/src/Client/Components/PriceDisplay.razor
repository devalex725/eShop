@using System.Globalization 

@if (CompareAtPrice != null)
{
    <span class="text-muted" style="text-decoration: line-through; @(Big ? "font-size: 24px;" : "font-size: 14px"); color: gray !important; margin-right: 10px">@FormatPrice(CompareAtPrice.GetValueOrDefault())</span>
}

@if (Price == 0)
{
    <span style="color: red; font-weight: bold; margin-left: 10px; ">Free</span>
}
else
{
    @if (CompareAtPrice is null)
    {
        <span style="font-weight: bold">@FormatPrice(Price)</span>
    }
    else
    {
        <span style="font-weight: bold; color: red;">@FormatPrice(Price)</span>
    }
}

@code {
    [Parameter]
    public decimal Price { get; set; }

    [Parameter]
    public decimal? CompareAtPrice { get; set; }

    [Parameter]
    public Func<decimal, string> FormatPrice { get; set; } = (price) => price.ToString("c");

    [Parameter]
    public bool Big { get; set; }
}